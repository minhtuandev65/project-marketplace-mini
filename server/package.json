{
    "name": "project-foodiehub-qt-be",
    "private": true,
    "version": "1.0.0",
    "author": "Dev_Tuan",
    "engines": {
        "node": "20.x",
        "npm": "11.x"
    },
    "scripts": {
        "dev": "cross-env NODE_OPTIONS=--tls-min-v1.2 BUILD_MODE=dev nodemon --exec babel-node ./src/server.js --ignore *.json",
        "lint": "eslint src --ext js --report-unused-disable-directives --max-warnings 0",
        "clean": "rimraf build && mkdir build",
        "build-babel": "babel ./src -d ./build/src",
        "build": "npm run clean && npm run build-babel",
        "heroku-postbuild": "npm run build",
        "start": "cross-env BUILD_MODE=production node ./build/src/server.js",
        "test": "jest"
    },
    "nodemonConfig": {
        "ignore": [
            "*.json",
            "public/javascripts/*.js"
        ]
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.835.0",
        "@aws-sdk/lib-storage": "^3.835.0",
        "@aws-sdk/s3-request-presigner": "^3.835.0",
        "@babel/runtime": "^7.22.10",
        "@elastic/elasticsearch": "^9.0.2",
        "async-exit-hook": "^2.0.1",
        "aws-sdk": "^2.1692.0",
        "axios": "^1.10.0",
        "bcryptjs": "^3.0.2",
        "cloudinary": "^2.6.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "cron": "^4.4.0",
        "cross-env": "^7.0.3",
        "crypto": "^1.0.1",
        "dayjs": "^1.11.13",
        "dotenv": "^16.5.0",
        "express": "^4.18.2",
        "http-status-codes": "^2.3.0",
        "i18next": "^25.5.2",
        "i18next-fs-backend": "^2.6.0",
        "i18next-http-middleware": "^3.8.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.13.0",
        "ms": "^2.1.3",
        "multer": "^1.4.5-lts.2",
        "node-cron": "^3.0.3",
        "nodemon": "^3.1.0",
        "redis": "^5.10.0",
        "resend": "^4.5.1",
        "rimraf": "^6.0.1",
        "slugify": "^1.6.6",
        "streamifier": "^0.1.1",
        "supertest": "^7.1.1",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.22.10",
        "@babel/core": "^7.22.10",
        "@babel/eslint-parser": "^7.22.10",
        "@babel/node": "^7.22.10",
        "@babel/plugin-transform-runtime": "^7.22.10",
        "@babel/preset-env": "^7.22.10",
        "babel-plugin-module-resolver": "^5.0.0",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.1.2",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^30.0.0",
        "mongodb-memory-server": "^10.1.4",
        "prettier": "^3.6.2"
    }
}
